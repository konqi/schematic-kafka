{
  "name": "schematic-kafka",
  "version": "1.0.10",
  "description": "Encode and decode kafka messages with Confluent Schema Registry (pure typescript implementation)",
  "main": "dist/index.js",
  "files": [
    "dist/**/*.*"
  ],
  "scripts": {
    "test": "node_modules/.bin/jest",
    "test:testcontainers": "node_modules/.bin/jest -c jest.testcontainers.config.js",
    "test:coverage": "node_modules/.bin/jest --collect-coverage",
    "docker:up": "docker-compose -f docker-compose.yml -p scematic-kafka up -d",
    "docker:down": "docker-compose -f docker-compose.yml -p scematic-kafka down",
    "build": "tsc",
    "prebuild": "rimraf dist"
  },
  "types": "dist/index.d.ts",
  "keywords": [
    "kafka",
    "schema",
    "schema-registry",
    "typescript",
    "avro",
    "protobuf",
    "json"
  ],
  "author": "Johann Wagner <github@konqi.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/konqi/schematic-kafka.git"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/kafkajs": "^1.9.0",
    "@types/node": "^18.7.7",
    "avsc": "^5.7.0",
    "jest": "^26.6.3",
    "kafkajs": "^1.15.0",
    "nock": "^13.0.11",
    "protobufjs": "^6.11.2",
    "testcontainers": "^8.1.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "tslib": "^2.2.0"
  }
}
